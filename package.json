{
  "name": "storymatic",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "GPL-3",
  "version": "2.0.84",
  "scripts": {
    "grammar": "ohm generateBundles --withTypes src/grammar.ohm; mv src/grammar.ohm-bundle.js dist/grammar.js; mv src/grammar.ohm-bundle.d.ts src/grammar.d.ts; cp src/grammar.d.ts dist/grammar.d.ts",
    "build": "npm run grammar; tsc -b",
    "pretest": "node ./dist/sm.js -b --src test --dist dist/test --module commonjs",
    "test": "mocha dist/test",
    "prepublishOnly": "npm run build",
    "dev": "tsc -w & npx static-server docs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zsnout/storymatic"
  },
  "bin": {
    "sm": "./bin/sm"
  },
  "dependencies": {
    "fast-glob": "^3.2.11",
    "mocha": "^10.0.0",
    "ohm-js": "^16.3.3",
    "typescript": "^4.6.4",
    "yargs": "^17.4.1"
  },
  "devDependencies": {
    "@codemirror/basic-setup": "^0.20.0",
    "@codemirror/lang-javascript": "^0.20.0",
    "@codemirror/state": "^0.20.0",
    "@codemirror/view": "^0.20.6",
    "@ohm-js/cli": "^1.1.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.29",
    "@types/prismjs": "^1.26.0",
    "@types/yargs": "^17.0.10",
    "static-server": "^2.2.1"
  }
}
